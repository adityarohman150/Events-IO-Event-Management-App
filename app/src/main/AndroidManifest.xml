<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aditya.eva">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">
        <activity android:name=".ui.user.MyEventActivity"
            android:parentActivityName=".ui.content.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.content.DashboardActivity" />
        </activity>
        <activity
            android:name=".ui.user.MyTicketActivity"
            android:parentActivityName=".ui.content.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.content.DashboardActivity" />
        </activity>
        <activity android:name=".ui.content.SuccessActivity" />
        <activity
            android:name=".ui.content.CheckoutActivity"
            android:parentActivityName=".ui.content.DetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.content.DetailActivity" />
        </activity>
        <activity
            android:name=".ui.content.DetailActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.content.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.content.DashboardActivity" />
        </activity>
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:parentActivityName=".ui.content.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.content.DashboardActivity" />
        </activity>
        <activity android:name=".ui.authentication.SignUpActivity" />
        <activity android:name=".ui.authentication.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.content.CreateNewActivity"
            android:parentActivityName=".ui.content.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.content.DashboardActivity" />
        </activity>
        <activity
            android:name=".ui.content.DashboardActivity"
            android:launchMode="singleTop" />
    </application>

</manifest>